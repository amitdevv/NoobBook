# NoobBook Backend Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000

# CORS Settings (comma-separated list for production)
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Required API Keys
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
PINECONE_API_KEY=
PINECONE_INDEX_NAME=

# Optional API Keys
ELEVENLABS_API_KEY=
TAVILY_API_KEY=

# Google Drive Integration (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Anthropic Tier (1-4, controls rate limits)
ANTHROPIC_TIER=1

# Supabase Configuration (Optional - for database migration)
# Leave empty to continue using JSON file storage
# Get these from: https://app.supabase.com/project/_/settings/api
# Or from local: supabase status
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=